{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 1,
  "automerge": false,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "pin",
        "digest"
      ],
      "groupName": "minor version up",
      "automerge": true
    },
    {
      "excludePackageNames": [
        "kotlin"
      ]
    }
  ]
}
