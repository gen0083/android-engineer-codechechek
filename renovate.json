{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "schedule": [
    "every weekend"
  ],
  "automerge": false,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "patch version up",
      "automerge": true
    },
    {
      "excludePackageNames": [
        "kotlin",
        "gradle"
      ]
    }
  ]
}
